@model MasterGradeSearch.Web.Models.InstitutesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SelectedInstitute.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedInstitute.District.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedInstitute.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedInstitute.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.AllInstitutes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
