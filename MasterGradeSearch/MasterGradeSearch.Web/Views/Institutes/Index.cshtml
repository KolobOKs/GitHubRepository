@model MasterGradeSearch.Web.Models.InstitutesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить новое учебное заведение", "Create",new{}, new { @role = "button", @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
           Город
        </th>
        <th>
           Район
        </th>
        <th>
         Сокращенное название
        </th>
        <th>
            Полное название
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model.AllInstitutes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>@Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @role = "button", @class = "btn btn-success" })</td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
